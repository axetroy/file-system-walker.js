{
  "name": "file-system-walker",
  "version": "1.0.16",
  "description": "A modern file system walker for Nodejs",
  "engines": {
    "node": ">= 14"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "./package.json": {
      "import": "./package.json",
      "require": "./package.json"
    },
    ".": {
      "require": {
        "default": "./dist/cjs/index.cjs",
        "types": "./dist/cjs/index.d.ts"
      },
      "import": {
        "default": "./dist/esm/index.mjs",
        "types": "./dist/esm/index.d.ts"
      }
    }
  },
  "scripts": {
    "test": "node --import tsx --test **/*.test.ts",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && node script/covert2mjs.cjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json && node script/covert2cjs.cjs",
    "watch": "tsc -p ./ --watch"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axetroy/file-system-walker.js.git"
  },
  "author": "Axetroy <axetroy.dev@gmail.com>",
  "license": "Anti 996",
  "bugs": {
    "url": "https://github.com/axetroy/file-system-walker.js/issues"
  },
  "keywords": [
    "file",
    "file system",
    "walker"
  ],
  "homepage": "https://github.com/axetroy/file-system-walker.js#readme",
  "devDependencies": {
    "@types/node": "^18.15.3",
    "tsx": "4.7.3",
    "typescript": "5.4.5"
  },
  "private": false
}
